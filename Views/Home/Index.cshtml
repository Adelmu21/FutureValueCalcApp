@model FVModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="jumbotron col-md-6 mt-2 p-3 rounded">
        <h1 class="display-4">Future Value Calculator</h1>
    </div>

    <form asp-action="Index" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
		<div class="row">
			<div class="row">
            <labe class="col-md-4" asp-for="MonthlyInvestment">Monthly Investment:</labe>
            <input class="col-md-3" asp-for="MonthlyInvestment" />
        </div>
            <labe class="col-md-4" asp-for="AnnualInterestRate">Annual Interest Rate:</labe>
            <input class="col-md-3" asp-for="AnnualInterestRate" />
        </div>
        <div class="row">
            <labe class="col-md-4" asp-for="Years">Years:</labe>
            <input class="col-md-3" asp-for="Years" />
        </div>
        <div class="row">
            <div class="offset-md-1">
                <button class="col-md-2" type="submit">Calculate</button>
            </div>
        </div>
        <div class="row">
            <labe class="col-md-4" >Future Value:</labe>
            <input class="col-md-3" value="@ViewBag.FV.ToString("c")" readonly />
        </div>
    </form>
</div>
